<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <SwitchPreference
        app:defaultValue="false"
        app:key="filter_ddr_only"
        app:title="@string/settings_filter"
        app:summary="@string/settings_filter_ddr_only"
        app:iconSpaceReserved="false"/>
    <ListPreference
        app:defaultValue="@string/settings_src_default"
        app:key="api_src"
        app:title="@string/settings_src"
        app:entries="@array/settings_src_entries"
        app:entryValues="@array/settings_src_entryValues"
        app:iconSpaceReserved="false"/>
    <ListPreference
        app:defaultValue="@string/settings_theme_default"
        app:key="theme"
        app:title="@string/settings_theme"
        app:entries="@array/settings_theme_entries"
        app:entryValues="@array/settings_theme_entryValues"
        app:iconSpaceReserved="false"/>
    <ListPreference
        app:defaultValue="@string/settings_locale_default"
        app:key="locale"
        app:persistent="false"
        app:title="@string/settings_locale"
        app:entries="@array/settings_locale_entries"
        app:entryValues="@array/settings_locale_entryValues"
        app:iconSpaceReserved="false"/>
    <SwitchPreference
        app:key="customtabs"
        app:defaultValue="true"
        app:title="@string/settings_custom_tabs"
        app:iconSpaceReserved="false"/>
    <Preference
        app:key="action_about"
        app:persistent="false"
        app:title="@string/action_about"
        app:iconSpaceReserved="false"/>
    <Preference
        app:key="action_privacy_policy"
        app:persistent="false"
        app:title="@string/action_privacy_policy"
        app:iconSpaceReserved="false"/>
</PreferenceScreen>
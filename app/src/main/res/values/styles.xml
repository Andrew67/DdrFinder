<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

        <!-- Base Theme: inspired by DDR (2013) White Cabinet color scheme; updated to use Material Palette -->
        <item name="colorPrimary">@color/material_blue_700</item>
        <item name="colorPrimaryDark">@color/material_blue_700_dark</item>

        <item name="colorAccent">@color/material_purple_500</item>
        <item name="actionModeBackground">?colorAccent</item>
        <item name="actionModeStatusBarColor">@color/material_purple_500_dark</item>

        <item name="pinColor">@color/material_purple_500_light</item>
        <item name="pinColorHasDDR">@color/material_yellow_600_light</item>
        <item name="pinColorSelected">@color/material_amber_700_dark</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Custom style to create a drag handle for the bottom sheet -->
    <style name="DragHandle" parent="AppTheme">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/drag_handle</item>
    </style>

    <!-- Custom style for bottom-sheet list images/text -->
    <style name="BottomSheetListItem" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingStart">72dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Menu</item>
    </style>
    <style name="BottomSheetListIcon" parent="AppTheme">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:alpha">.54</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    <style name="BottomSheetListDetail" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.SearchResult.Subtitle</item>
        <item name="android:alpha">.54</item>
    </style>

</resources>